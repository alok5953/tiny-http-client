{
  "name": "@alok5953/tiny-http-client",
  "version": "1.0.0",
  "description": "A lightweight, universal HTTP client wrapping native fetch API with zero dependencies",
  "type": "module",
  "main": "./src/http-client.js",
  "exports": {
    ".": "./src/http-client.js",
    "./plugins": "./src/plugins.js"
  },
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "lint": "eslint src/",
    "format": "prettier --write 'src/**/*.js'",
    "prepare": "husky install"
  },
  "keywords": [
    "http",
    "fetch",
    "api",
    "client",
    "request",
    "lightweight",
    "universal",
    "zero-dependencies",
    "isomorphic"
  ],
  "author": "Alok Kaushik",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alokkaushik/tiny-http-client.git"
  },
  "bugs": {
    "url": "https://github.com/alokkaushik/tiny-http-client/issues"
  },
  "homepage": "https://github.com/alokkaushik/tiny-http-client#readme",
  "devDependencies": {
    "@babel/core": "^7.24.0",
    "@babel/preset-env": "^7.24.0",
    "eslint": "^8.57.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
